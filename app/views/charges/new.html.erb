
<!DOCTYPE html>
<html>
  <head>
	<% provide(:title, 'Payments') %>

    <link rel="shortcut icon" href="https://cdn1.iconfinder.com/data/icons/munich/16x16/lightbulb.png">

    <%= stylesheet_link_tag "about" %>

    <%= render 'shared/analytics' %>
  </head>

  <body> 
    <%= render 'shared/contact' %>

    <div class="wrap">
      <div class="posts">                
        <div class="post">
          <div class="text">
            <h2>Make a Payment</h2>
            <p>Sorry, this page is in test-mode and under construction.</p> 
          </div>              
        </div> <!-- end post -->

        <!--  -->
      <%= form_tag charges_path do %>
      <article>
        <label class="amount">
        <span>Amount: $5.00</span>

        </label>
      </article>

      <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="A month's subscription"
        data-amount="500"></script>
    <% end %>

    </div>
  </div>           
    
  <%= render 'shared/footer' %>  

  </body>
</html>